extends ./layout/index

block contenido
  main.container.mt-5
    h1.text-center.mt-5 #{pagina}

    include ./layout/bloque_testimoneales


    .row

      .col-md-12
        h2.d-block.w-100.text-center.mt-5 Agrega un testimoneal

        if(errores)
          each error in errores
            .alert.col.alert-danger.text-center= error.mensaje


      .row.justify-content-center.col
        .col-md-8
          form(action="", method="POST") 
            .form-group
              label(for="nombre") Nombre: 
              input#nombre(type="text", name="nombre", placeholder="Tu nombre...", class="form-control", value= nombre)
            .form-group
              label(for="email") Correo electronico: 
              input#email(type="email", name="email", placeholder="Tu email...", class="form-control", value= email)
            .form-group
              label(for="mensaje") Mensaje: 
              textarea#mensaje(name="mensaje", cols="30", rows="3", class="form-control", placeholder="Tu mensaje")= mensaje 

            input.btn.btn-success.btn-block(type='submit', value="Enviar")